#!/usr/bin/env ruby
require_relative '../lib/turn'

actionCount = 0
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac Toe!"
display_board(board)
while actionCount < 10
  turn(board)
  value = gets.strip
  value = value.to_i
  if value < 10 && value > 0
    index = value - 1
    if board[index] == " "
      board[index] = "X"
      display_board(board)
      actionCount += 1
    end
  end

end
