#!/usr/bin/env ruby
require_relative '../lib/turn'

actionCount = 0
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac Toe!"
display_board(board)
while actionCount < 9
  value = gets.strip
  value = value.to_i
  turn(board, value)
  if value < 10 && value > 0
    index = input_to_index(value)
    if valid_move?(board, index) == true
      move(board, index, "X")
      display_board(board)
      actionCount += 1
    end
  end
end
